<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RootFragment">

    <Button
        android:id="@+id/button_to_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="40dp"
        android:width="300dp"
        android:text="Перейти к рецептам" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textViewTemp"
            android:layout_width="308dp"
            android:layout_height="wrap_content"

            android:paddingLeft="50dp"
            android:layout_marginTop="30dp"
            android:text="Cколько градусов в городе"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/cityName"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="50dp"
            android:width="300dp"
            android:hint="Введите название города"
            android:text="yaroslavl"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textPogoda"
            android:layout_width="308dp"
            android:layout_height="wrap_content"

            android:paddingLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:text="20"
            android:textSize="38dp" />



        <Button
            android:id="@+id/getWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:width="300dp"
            android:layout_marginBottom="50dp"
            android:text="Прогноз погоды" />

        <Button
            android:id="@+id/button_call_to_support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:width="300dp"
            android:text="Звонок в Техподдержку" />

    </LinearLayout>







</LinearLayout>